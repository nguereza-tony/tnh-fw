{
    "name": "tnhfw/tnh-fw",
    "description": "A simple PHP framework using HMVC architecture",
    "type": "project",
    "license": "GPL-3.0-or-later",
	"keywords": ["application", "website", "development", "framework", "PHP"],
    "authors": [
        {
            "name": "NGUEREZA Tony",
            "email": "nguerezatony@gmail.com",
			"homepage": "http://www.iacademy.cf",
			"role": "developer"
        }
    ],

    "support": {
        "issues": "https://github.com/tnhfw/tnh-fw/issues",
        "source": "https://github.com/tnhfw/tnh-fw"
    },
	
	"require": {
        "php": ">=5.4 <7.2",
        "ext-pdo": "*"
    },
	
	"require-dev": {
        "mikey179/vfsstream": "~1.3",
        "phpunit/phpunit": ">=4.0 <6"
    },

    "suggest": {
        "ext-pdo_mysql": "For MySQL or MariaDB database",
        "ext-pdo_oci": "For Oracle database",
        "ext-pdo_oci8": "For Oracle version 8 database",
        "ext-pdo_pqsql": "For PostgreSQL database",
        "ext-pdo_sqlite": "For SQLite database",
        "ext-openssl": "For using database session handler and StringHash library"
    },
    
    "config": {
        "sort-packages": true
    },
	
    "minimum-stability": "dev"
}
